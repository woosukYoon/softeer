<configuration>
    <property>
        <name>fs.defaultFS</name>
        <value>hdfs://0.0.0.0:9000</value>
    </property>
    <!-- 웹에서 데이터를 업로드할 때 필요. -->
    <!-- Docker에서 container 간의 통신을 진행할 경우에 필요.-->
    <property>
        <name>dfs.client.use.datanode.hostname</name>
        <value>true</value>
    </property>

    <property>
        <name>dfs.datanode.hostname</name>
        <value>localhost</value>
    </property>
</configuration>